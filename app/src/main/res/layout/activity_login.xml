<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp"
    tools:context=".activityLogin">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp"
        android:src="@drawable/splashlogo"/>

    <TextView
        android:id="@+id/textLogin"
        android:layout_below="@+id/imgLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENTORKU"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18dp"
        android:textColor="@color/textMain"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/bgForm"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="15dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Enter Your Email"
        android:maxLength="50"
        android:paddingLeft="20dp"
        android:textColor="@color/textMain"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/bgForm"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:maxLength="50"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:textColor="@color/textMain"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/forgotSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtForgot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Forgot"
            android:textColor="@color/textMain"
            android:textSize="14dp"

            />

        <TextView
            android:id="@+id/txtForgot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:fontFamily="@font/poppinsregular"
            android:text=" Password ?"
            android:textColor="@color/main"
            android:textSize="14dp"

            />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/forgotSection"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/main"
        android:fontFamily="@font/poppinsbold"
        android:text="Sign In"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/connectText"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:orientation="horizontal">

       <View
           android:id="@+id/viewleft"
           android:layout_width="75dp"
           android:layout_height="1dp"
           android:background="@color/textMain" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Or Connect With"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/textMain"
            android:fontFamily="@font/poppinsregular"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/viewright"
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:background="@color/textMain" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iconGoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/gl"

            />

        <ImageView
            android:id="@+id/iconFb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/fb"

            />

        <ImageView
            android:id="@+id/iconIg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/ig"

            />

        <ImageView
            android:id="@+id/iconTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twt"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAlready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearIcon"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtalready1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Dontâ€™t have Account ?"
            android:textColor="@color/textMain"
            android:textSize="14dp"

            />

        <TextView
            android:id="@+id/txtsignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text=" Sign Up"
            android:textColor="@color/main"
            android:textSize="14dp"

            />

    </LinearLayout>






</RelativeLayout>