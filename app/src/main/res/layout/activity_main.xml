<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgSplah"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp"
        android:src="@drawable/splashlogo"/>

    <TextView
        android:id="@+id/textSplashmain"
        android:layout_below="@+id/imgSplah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENTORKU"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18dp"
        android:textColor="@color/textMain"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textSplashdesc"
        android:layout_below="@+id/textSplashmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar Kapanpun Dan Dimanapun"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/textMain"
        android:layout_centerHorizontal="true"/>







</RelativeLayout>